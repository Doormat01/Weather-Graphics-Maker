<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WGM_Application.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WGM_Application"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Weather Graphics Maker 0.0.1">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"></MicaBackdrop>
    </Window.SystemBackdrop>

    <Grid Background="#FF001C3D">
        <!--This is for the menu bar-->
        <MenuBar VerticalAlignment="Top" Background="#003366">
            <MenuBarItem Title="File" >
                <MenuFlyoutItem x:ConnectionId='7' Text="New Template"                    />
                <MenuFlyoutItem x:ConnectionId='8' Text="Open Template"                     />
                <MenuFlyoutItem x:ConnectionId='9' Text="New Map"                    />
                <MenuFlyoutItem Text="New Style"/>
            </MenuBarItem>
            <MenuBarItem Title="Edit">
                <MenuFlyoutSubItem Text="Location">
                    <MenuFlyoutItem x:ConnectionId='5' Text="Poll Location"                     />
                    <MenuFlyoutItem x:ConnectionId='6' Text="Input Location"                           />
                </MenuFlyoutSubItem>
            </MenuBarItem>

        </MenuBar>
        
        <!--This is to show the location-->
        <TextBlock x:ConnectionId='2' Padding="0,0,20,0" x:Name="LocationDisplay" Text="Location" HorizontalAlignment="Right" VerticalAlignment="Top"></TextBlock>
        
        <!--This is for the input location pop up-->
        <ContentDialog x:ConnectionId='3' x:Name="LocationDialog"
               Title="Enter Your Location"
               PrimaryButtonText="OK"
               SecondaryButtonText="Cancel">
            <StackPanel>
                <AutoSuggestBox x:ConnectionId='4' x:Name="LocationInput"
                PlaceholderText="Enter location..."
                                                   
                                                   />
            </StackPanel>
        </ContentDialog>
    </Grid>
</Window>

